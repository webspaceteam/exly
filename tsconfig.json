{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "target": "es6",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/**/*.hbs"],
    "exclude": ["node_modules", "dist", "src/assets/**/*.ts"]
}
